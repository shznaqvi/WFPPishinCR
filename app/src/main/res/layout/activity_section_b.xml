<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="com.example.hassannaqvi.wfppishincr.ui.activities.SectionBActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/ccbHeading"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccbSubHeading"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <!--Q1-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb01"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ccb01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ccb01" />


                </android.support.design.widget.TextInputLayout>

                <!--Q2-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb02"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <RadioGroup
                    android:id="@+id/ccb02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/ccb02a"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ccb02a"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb02b"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ccb02b"
                        android:textSize="20sp" />
                </RadioGroup>


                <!--Q3-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb03"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <io.blackbox_vision.datetimepickeredittext.view.DatePickerInputEditText
                        android:id="@+id/ccb03age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ccb03" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ccb03m"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ccb03m" />

                </android.support.design.widget.TextInputLayout>

                <!--Q4-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb04"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ccb03y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/ccb04" />

                </android.support.design.widget.TextInputLayout>

                <!--Q5-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb05"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <RadioGroup
                    android:id="@+id/ccb05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/ccb0501"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0501"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0502"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0502"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0503"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0503"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0504"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0504"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0505"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0505"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0506"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0506"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0507"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0507"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0508"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0508"
                        android:textSize="20sp" />

                </RadioGroup>

                <!--Q6-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="@string/ccb06"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <RadioGroup
                    android:id="@+id/ccb06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RadioButton
                        android:id="@+id/ccb0601"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0601"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0602"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0602"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0603"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0603"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0604"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0504"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0605"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0605"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0606"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0606"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0607"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0507"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0608"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0608"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0609"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0609"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0610"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0610"
                        android:textSize="20sp" />

                    <RadioButton
                        android:id="@+id/ccb0611"
                        style="@style/radiobutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ccb0611"
                        android:textSize="20sp" />

                </RadioGroup>

                <!--================Button End==================-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_Continue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#1ed61e"
                        android:text="@string/start_interview"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_End"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/red"
                        android:text="@string/end_interview"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
</layout>